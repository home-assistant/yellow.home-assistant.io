{% comment %}
<!-- prettier-ignore -->
{% endcomment %}

{% capture css %}
  {% include "style.css" %}
{% endcapture %}

{% capture full_title -%}
{%- if title -%}
{{ title }} – Home Assistant Yellow
{%- else -%}
Home Assistant Yellow Guide
{%- endif -%}
{%- endcapture %}
{% comment %}
<!-- prettier-unignore -->
{% endcomment %}

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <title>{{ full_title }}</title>
    <meta name="description" content="{{ description }}" />
    <meta name="viewport" content="width=device-width" />
    <meta property="og:title" content="{{ full_title }}" />
    <script
      src="https://kit.fontawesome.com/ee3aba475c.js"
      crossorigin="anonymous"
    ></script>
  </head>
  <style>
    {{ css }}
    .buy-button {
      cursor: pointer;
    }
  </style>
  <body>
    <div class="container">
      <div class="nav-bar">
        <a class="logo" href="/"
          >
          <picture>
            <source srcset="/images/yellow-logo-white.png" media="(prefers-color-scheme: dark)">
            <img src="/images/yellow-logo.png" alt="Home Assistant Yellow" />
          </picture>
        </a>
        <ul>
          {% for item in menu %}
          <li>
            <a
              class="{% if item[0] contains page.url %}active{% endif %}"
              href="{{ item[0][0] }}"
              >{{ item[1] }}</a
            >
          </li>
          {% endfor %}
          <li>
            <a
              class="buy-button"
              target="_blank"
              href="https://www.home-assistant.io/yellow"
              >Buy</a
            >
          </li>
        </ul>
      </div>
    </div>

    <div class="content">{{ content }}</div>

    <div class="container">
      <div class="footer">
        <div>
          Home&nbsp;Assistant Yellow &nbsp; – &nbsp;
          <a href="mailto:yellow@home-assistant.io">Contact</a>
          &nbsp; – &nbsp;
          <a href="https://www.github.com/home-assistant" target="_blank"
            >GitHub</a
          >
        </div>
      </div>
    </div>
  </body>
</html>
